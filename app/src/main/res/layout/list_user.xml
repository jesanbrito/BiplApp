<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myUser"
            type="co.edu.unab.tas.ejuab.biplapp.model.entity.User" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_user_card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:mipmap/sym_def_app_icon" />

            <TextView
                android:id="@+id/tv_document_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{myUser.document}"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/iv_user_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{myUser.name}"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tv_document_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tv_last_name_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{myUser.lastName}"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tv_name_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tv_email_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{myUser.email}"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tv_last_name_user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tv_phone_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:text="@{myUser.phone}"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_email_user" />

            <TextView
                android:id="@+id/tv_status_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:text="@{myUser.status}"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_user" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>