<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="bookadmin" type="co.edu.unab.tas.ejuab.biplapp.model.entity.Book" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/iv_book_admin_cover"
                android:layout_width="110dp"
                android:layout_height="110dp"
                bind:image="@{bookadmin.cover}"
                android:src="@mipmap/ic_book_list_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_title_admin_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="10dp"
                android:text="@{`Libro : `+bookadmin.title}"
                app:layout_constraintStart_toEndOf="@+id/iv_book_admin_cover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_editorial_admin_book" />

            <TextView
                android:id="@+id/tv_editorial_admin_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="10dp"
                android:text="@{`Editorial : `+bookadmin.editorial}"
                app:layout_constraintStart_toEndOf="@+id/iv_book_admin_cover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_author_admin_book" />

            <TextView
                android:id="@+id/tv_author_admin_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="10dp"
                android:text="@{`Autor : `+bookadmin.author}"
                app:layout_constraintStart_toEndOf="@+id/iv_book_admin_cover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_status_admin_book" />

            <TextView
                android:id="@+id/tv_status_admin_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="10dp"
                android:text="@{ `Estado : `+(bookadmin.status == 1 ? `Disponible` : bookadmin.status == 2 ? `Reservado` : `Prestado`)}"
                app:layout_constraintStart_toEndOf="@+id/iv_book_admin_cover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>