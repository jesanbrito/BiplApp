<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="book" type="co.edu.unab.tas.ejuab.biplapp.model.entity.Book" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/iv_book_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_book_list_round"
                bind:image="@{book.cover}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_title_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{book.title}"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/iv_book_cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_editorial_book"
                />

            <TextView
                android:id="@+id/tv_editorial_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{book.editorial}"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/iv_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_author_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{book.author}"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/iv_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_editorial_book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_status_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{(book.status == 1 ? `Disponible` : book.status == 2 ? `Reservado` : `Prestado`)}"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/iv_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_author_book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>